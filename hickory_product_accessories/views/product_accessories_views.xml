<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.custom.form</field>
        <field name="model">product.template</field>
        <field name = "inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="accessories" string="Accessories" >
                        <field name="product_accessory_line_ids" widget="one2many" >
                            <tree string="Accessory" editable="bottom">
                                <field name="product_id" context="{'default_type': 'product'}"/>
                                <field name="attribute_value_ids" widget="many2many_tags" options="{'no_create': True}" />
                                 <field name="is_mandatory" />
                            </tree>
                        </field>
                </page>
            </xpath>
        </field>
    </record>
     <template id="cus_product_attributes" inherit_id="website_sale.product" name="Custom product attributes">
        <xpath expr="//t[@t-call='sale.variants']" position="before">
            <input type="hidden" name="mandatory_mapping" t-att-value="md_optional_products"/>
        </xpath>
    </template>

