<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_update_template_wizard" model="ir.ui.view">
            <field name="name">update.product.template</field>
            <field name="model">update.product.template</field>
            <field name="arch" type="xml">
                <form string="Update Product Variants and BOM">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_tmpl_id" invisible="1"/>
                                <field name="product_ids" widget="many2many_tags" required="1" domain="[('id', '!=', product_tmpl_id)]"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Submit" type="object" name="update_variants_and_bom"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_update_template_wizard" model="ir.actions.act_window">
            <field name="name">Update Product Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_update_template_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
