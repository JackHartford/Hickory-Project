<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_product_common_inherit_bomextension" model="ir.ui.view">
            <field name="name">product.product.common.bom.extension</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="action" name="%(product_template_extension.action_update_template_wizard)d"
                        string="Copy Template" icon="fa-edit" groups="product.group_product_variant"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
