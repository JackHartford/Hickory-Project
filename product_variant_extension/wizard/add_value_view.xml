<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="variant_add_value_form" model="ir.ui.view">
        <field name="name">variant.add.value.form</field>
        <field name="model">variant.add.value</field>
        <field name="arch" type="xml">
            <form string="Add Attribute Values Conditionally">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <field name="condition_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="attribute_id"/>
                                <field name="value_id" options="{'no_create_edit': True}"
                                       domain="[('attribute_id', '=', attribute_id)]"
                                       context="{'default_attribute_id': attribute_id}"/>
                                <field name="attribute_value_ids" domain="[('id', '!=', value_id),('attribute_id', '!=', attribute_id)]" force_save="1" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="add_value_on_variant" string="Add Values"
                                colspan="1" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="variant_add_value_action" model="ir.actions.act_window">
        <field name="name">Add Attribute Values Conditionally</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">variant.add.value</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

</odoo>
