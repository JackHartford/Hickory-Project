<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_variant_create_form" model="ir.ui.view">
        <field name="name">product.variant.create.form</field>
        <field name="model">product.variant.create</field>
        <field name="arch" type="xml">
            <form string="Create Product Variant">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                         <page string="New Variants To Create" name="new_variants">
                            <field name="new_variant_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="add_flag"/>
                                    <field name="sq_no" readonly="1"/>
                                    <field name="attribute_value_ids" force_save="1" widget="many2many_tags" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Existing Variants" name="exist_variants">
                            <field name="exist_variant_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="default_code" readonly="1"/>
                                    <field name="attribute_value_ids" force_save="1" widget="many2many_tags" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <footer>
                        <button name="create_product" string="Create Variants"
                                colspan="1" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="create_product_variant_action" model="ir.actions.act_window">
        <field name="name">Create Warehouse Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.variant.create</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

</odoo>
