<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_simple_label_sale_order">
            <div class="col-xs-4" style="padding:0;">



                <t t-foreach="order.order_line" t-as="line">

                    <t t-foreach="range(0,int(line.product_uom_qty))" t-as="int(count)">


                        <table style="width:384px;height:192px;border:2px solid black;" class="table">

                            <tbody>

                                <tr style="border-bottom:hidden;height:30%;">
                                    <td>
                                        <t t-if="line.order_id.partner_id.name">
                                            <strong t-field="line.order_id.partner_id.name" style="float:left;width:70%;font-size:20px;"/>
                                            <strong t-field="line.order_id.date_order" style="float:right;width:30%;font-size:20px;"/>
                                        </t>
                                    </td>
                                </tr>

                                <tr style="border-top:hidden;border-bottom:hidden;height:40%;">
                                    <td style="text-align:center; vertical-align:middle;" class="col-xs-5">
                                        <img t-if="line.product_id.barcode"
                                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.barcode, 600, 150)"
                                             style="width:100%;height:20%;"/>
                                        <span t-field="line.product_id.barcode"/>
                                    </td>
                                </tr>

                                <tr style="border-top:hidden;height:30%;">
                                    <td>
                                        <strong style="display:block;float:left;width:70%;font-size:20px;">
                                            <t t-if="line.product_id.default_code">
                                                [<span t-field="line.product_id.default_code"/>]
                                            </t>
                                            <span t-field="line.product_id.name"/>
                                        </strong>

                                        <strong t-esc="'%s:%s' % ('Site',line.product_id.get_site())" style="float:right;width:30%;font-size:20px;"/>
                                    </td>
                                </tr>

                            </tbody>

                        </table>

                        <!--dummy table to page break-->
<!--                        <table style="border:hidden;" class="table">-->
<!--                        </table>-->

                    </t>
                </t>



            </div>
        </template>

        <template id="report_product_label_sale_order_line">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="order">
                        <t t-call="hickory_product_promotions.report_simple_label_sale_order">
                            <t t-set="order" t-value="order"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
