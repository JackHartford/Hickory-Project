<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="partner_form">
            <field name="name">product.promotions.customer.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Variants" name="variants" attrs="{'invisible':[('customer', '=', False)]}">
                        <field name="variants_line_ids">
                            <tree string="Applicable Variants" editable="bottom">
                                <field name="attribute"/>
                                <field name="value_ids" widget="many2many_tags" domain="[('attribute_id','=',attribute)]"/>

                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
