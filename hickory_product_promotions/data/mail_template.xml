<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">

            <record id="email_template_product_promotion" model="mail.template">
                        <field name="name">Product Promotion Link</field>
                        <field name="email_from"></field>
                        <field name="subject">${object.name or 'n/a' } - Interested Products</field>
                        <field name="email_to">${object.email or ''}</field>
                        <field name="email_cc">${object.email or ''}</field>
                        <field name="model_id" ref="base.model_res_partner"/>
                        <field name="auto_delete" eval="True"/>
                        <field name="lang">${object.lang}</field>
                        <field name="body_html"><![CDATA[

            <p style="margin-top: 20px;">
            <br/>
            Please use the link below to view the details of your customized products.
            </p>
            <br/>
                 <div>
                    <a style="display:block;margin-top: 20px; width: 280px; height:20px; margin-left: 0px; color: #DDD; font-family: Verdana, Geneva, sans-serif; font-size: 12px; font-weight: bold; text-align: center; text-decoration: none !important; line-height: 1; padding: 5px 0px 0px 0px; background-color:#21b799; border-radius: 5px 5px; background-repeat: repeat no-repeat;"
                     href="${object.get_promo_url()}" target="new">Click Here to View Products</a>
                  </div>

            ]]></field>

        </record>
  </data>
</odoo>
