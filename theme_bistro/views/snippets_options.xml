<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bistro_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@id='so_main_colorpicker']" position="after">
            <div data-selector="section">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#" class="dropdown-item"><i class="fa fa-reorder fa-1x"/>Borders</a>
                    <div class="dropdown-menu">
                        <a href="#" class="dropdown-item" data-select-class="">None</a>
                        <a href="#" class="dropdown-item" data-select-class="border-waves">Waves</a>
                        <a href="#" class="dropdown-item" data-select-class="border-lines">Lines</a>
                        <a href="#" class="dropdown-item" data-select-class="border-triangles">Triangles</a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>


    <template id="preheader" inherit_id="website.layout" name="preHeader">
        <xpath expr="//div[@id='wrapwrap']/header/nav" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
    </template>

     <template id="products_description_hide" inherit_id="website_sale.products" name="Product Description">
        <xpath expr="//div[@id='oe_structure_website_sale_products_2']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
    </template>

    <template id="company_email_phone" inherit_id="website.layout_footer_copyright" name="Footer Company Details">
        <xpath expr="//div[hasclass('o_footer_copyright')]//div[hasclass('row')]" position="inside">


            <div class="col-lg-5 text-right text-md-right">
                        <span t-if="res_company.phone" class="list-inline-item">
                    <i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/>
                    <span t-field="res_company.phone"/>
                </span>
                <span t-if="res_company.email" class="list-inline-item">
                    <i class="fa fa-at" role="img" aria-label="Email" title="Email"/>
                    <span t-field="res_company.email"/>
                </span>
                    </div>


        </xpath>
    </template>



</odoo>
